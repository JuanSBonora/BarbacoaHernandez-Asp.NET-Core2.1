@{
    ViewData["Title"] = "Login";
}
@model LoginViewModels
<center>
    <div class="card blue-grey">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form asp-controller="Home" asp-action="Index" method="post">
                        <h4 class="title">
                            Iniciar Sesi&oacute;n
                        </h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-field col s12">
                            <label asp-for="input.Email" class="white-text"></label>
                            <input asp-for="input.Email" class="form-control white-text" />
                            <span asp-validation-for="input.Email" class="text-danger"></span>
                        </div>
                        <div class="input-field col s12">
                            <label asp-for="input.Password" class="white-text"></label>
                            <input asp-for="input.Password" class="form-control white-text" />
                            <span asp-validation-for="input.Password" class="text-danger"></span>
                        </div>
                        <center>
                            <button type="submit" id="btnLogn" class="waves-effect waves-light btn">Iniciar Sesi&oacute;n</button>
                        </center>
                    </form>
                </section>
                <label id="indexMessage" class="error">@Html.DisplayFor(m => m.ErrorMessage)</label>
            </div>
        </div>
    </div>
</center>