@*@model IEnumerable<InputModelRegistrar>*@
@model DataPaginador<InputModelRegistrar>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var list = Model.List;
}

    <div class="container2">
        <h4>Usuarios</h4>
        <div class="row">
            <div class="input-field cold s0">
                <a asp-area="Usuarios" asp-page="/Registrar/Registrar" class="waves-effect waves-light btn">Registrar</a>
                <form asp-area="Usuario" asp-controller="Usuarios" asp-action="Index" method="get">
                    <div class="row">
                        <div class="input-field col s6">
                            <input asp-for="Search" placeholder="Buscar usuario">
                        </div>
                        <div class="input-field col s6">
                            <button type="submit" class="waves-effect waves-light btn">Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th class="center">Imagen</th>
                    <th class="center">@Html.DisplayNameFor(model => model.Input.Nombre)</th>
                    <th class="center">@Html.DisplayNameFor(model => model.Input.Apellido)</th>
                    <th class="center">@Html.DisplayNameFor(model => model.Input.Role)</th>
                    <th class="center">Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.List)
                {
                    var imagen = item.Email + ".png";
                    <tr>
                        <td class="center">
                            <ul class='collection'>
                                <li class='collection-item avatar'>
                                    <img class='responsive circle' src="~/images/fotos/Usuarios/@imagen" />
                                </li>
                            </ul>
                        </td>
                        <td class="center">@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.Apellido)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.Role)</td>
                        <td class="center">
                            <a asp-area="Usuarios" asp-page="/Registrar/Registrar" asp-route-id="@item.Email" class="waves-effect waves-light btn">Edit</a>
                            <a asp-area="Usuarios" asp-page="/Eliminar/Eliminar" asp-route-id="@item.Email" class="waves-effect waves-light btn orange lighten-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            Resultados @Html.Raw(Model.Pagi_info);
            <br />
            @Html.Raw(Model.Pagi_navegacion)
        </div>
    </div>

